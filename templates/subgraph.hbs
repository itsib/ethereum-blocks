specVersion: 0.0.4
description: Indexing all Ethereum Block data
repository: https://github.com/itsib/ethereum-blocks
schema:
  file: ./schema.graphql
dataSources:
  - kind: ethereum/contract
    name: ConverterRegistryContract
    network: {{network}}
    source:
      address: "0x0ddff327ddf7fe838e3e63d02001ef23ad1ede8e"
      abi: ConverterRegistryContract
    mapping:
      kind: ethereum/events
      apiVersion: 0.0.6
      language: wasm/assemblyscript
      entities:
        - Block
      abis:
        - name: ConverterRegistryContract
          file: ./abis/contract-abi.json
      blockHandlers:
        - handler: handleBlock
      file: ./src/mappings/blocks.ts
